<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Inventory Application</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-sRIl4kxILFvY47J16cr9ZwB07vP4J8+LH7qKQnuqkuIAvNWLzeN8tE5YBujZqJLB" crossorigin="anonymous">
</head>
<body>
    <h1>Inventory Application</h1>

    <a href="/new"><button type="button" class="btn btn-primary">Add New Book</button></a>

    <table class="table">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Title</th>
                <th scope="col">Stock Quantity</th>
                <th scope="col">Category</th>
                <th scope="col">Authors</th>
            </tr>
        </thead>
        <tbody>
            <% books.forEach(book => { %>
                <tr>
                    <th scope="row"><%= book.id %></th>
                    <td><%= book.title %></td>
                    <td><%= book.stock_quantity %></td>
                    <td><%= book.category %></td>
                    <td><%= book.authors %></td>
                    <td><a href="/books/<%= book.id %>"><button type="button" class="btn btn-info">Info</button></a>
                        <a href="/delete-book/<%= book.id %>"><button type="button" class="btn btn-danger">Delete</button></a>
                    </td>
                </tr>
            <% }) %>
        </tbody>
    </table>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/js/bootstrap.bundle.min.js" integrity="sha384-FKyoEForCGlyvwx9Hj09JcYn3nv7wiPVlz7YYwJrWVcXK/BmnVDxM+D2scQbITxI" crossorigin="anonymous"></script>
</body>
</html>