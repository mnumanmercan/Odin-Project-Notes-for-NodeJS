<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Add New Book</title>
</head>
<body>
    <h1><%= formTitle %></h1>
    <form action="/new" method="POST">
        <label for="title">Title:</label>
        <input type="text" id="title" name="title" required><br><br>

        <label for="stock_quantity">Stock Quantity:</label>
        <input type="number" id="stock_quantity" name="stock_quantity" required><br><br>

        <label for="category_id">Category:</label>
        <select id="category_id" name="category_id" required>
            <% categories.forEach(category => { %>
                <option value="<%= category.id %>"><%= category.name %></option>
            <% }); %>
        </select><br><br>
        <label for="authors_id">Authors:</label>
        <select name="authors_id" id="authors_id" required>
            <% authors.forEach(author => { %>
                <option value="<%= author.id %>"><%= author.name %></option>
            <% }); %>
        </select><br><br>

        <button type="submit">Add Book</button>
    </form>

    <a href="/"><button type="button">Back to Books List</button></a>
</body>
</html>