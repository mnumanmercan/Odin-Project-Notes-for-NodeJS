<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Add New Book</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-sRIl4kxILFvY47J16cr9ZwB07vP4J8+LH7qKQnuqkuIAvNWLzeN8tE5YBujZqJLB" crossorigin="anonymous">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
</head>
<body class="bg-light">
    <div class="container py-5">
        <div class="row justify-content-center">
            <div class="col-lg-6 col-md-8">
                <div class="card shadow-lg border-0 rounded-4">
                    <div class="card-header bg-primary text-white text-center py-4 rounded-top-4">
                        <i class="fas fa-book-medical fs-1 mb-3"></i>
                        <h1 class="h2 mb-0 fw-bold"><%= formTitle %></h1>
                    </div>
                    
                    <div class="card-body p-4 p-md-5">
                        <form action="/new" method="POST">
                            <div class="mb-4">
                                <label for="title" class="form-label fw-semibold">
                                    <i class="fas fa-book text-primary me-2"></i>Kitap Adı
                                </label>
                                <input type="text" class="form-control form-control-lg rounded-3 border-2" 
                                    id="title" name="title" placeholder="Kitap adını giriniz" required>
                            </div>

                            <div class="mb-4">
                                <label for="stock_quantity" class="form-label fw-semibold">
                                    <i class="fas fa-boxes text-primary me-2"></i>Stok Miktarı
                                </label>
                                <input type="number" class="form-control form-control-lg rounded-3 border-2" 
                                    id="stock_quantity" name="stock_quantity" placeholder="Stok miktarını giriniz" 
                                    min="0" required>
                            </div>

                            <div class="mb-4">
                                <label for="category_id" class="form-label fw-semibold">
                                    <i class="fas fa-folder text-primary me-2"></i>Kategori
                                </label>
                                <select class="form-select form-select-lg rounded-3 border-2" 
                                    id="category_id" name="category_id" required>
                                    <option value="" selected disabled>Kategori seçiniz</option>
                                    <% categories.forEach(category => { %>
                                        <option value="<%= category.id %>"><%= category.name %></option>
                                    <% }); %>
                                </select>
                            </div>

                            <div class="mb-4">
                                <label for="authors_id" class="form-label fw-semibold">
                                    <i class="fas fa-user-edit text-primary me-2"></i>Yazar
                                </label>
                                <select class="form-select form-select-lg rounded-3 border-2" 
                                    name="authors_id" id="authors_id" required>
                                    <option value="" selected disabled>Yazar seçiniz</option>
                                    <% authors.forEach(author => { %>
                                        <option value="<%= author.id %>"><%= author.name %></option>
                                    <% }); %>
                                </select>
                            </div>

                            <div class="d-grid gap-3 mt-4">
                                <button type="submit" class="btn btn-primary btn-lg rounded-3 fw-semibold">
                                    <i class="fas fa-check-circle me-2"></i>Kitap Ekle
                                </button>
                                <a href="/" class="btn btn-outline-secondary btn-lg rounded-3 fw-semibold">
                                    <i class="fas fa-arrow-left me-2"></i>Kitap Listesine Dön
                                </a>
                            </div>
                        </form>
                    </div>
                    
                    <div class="card-footer bg-light border-0 py-3 text-center rounded-bottom-4">
                        <small class="text-muted">
                            <i class="fas fa-info-circle me-2"></i>
                            Tüm alanların doldurulması zorunludur
                        </small>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-FKyoEForCGlyvwx9Hj09JcYn3nv7wiPVlz7YYwJrWVcXK/BmnVDxM+D2scQbITxI"
        crossorigin="anonymous"></script>
</body>
</html>