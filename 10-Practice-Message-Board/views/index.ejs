<!-- index.ejs -->
<html>
  <head>
    <title>Homepage</title>
    <link rel="stylesheet" href="/styles.css">
  </head>
  <body>
    <h1><%= title %></h1>

    <ul>
      <% messages.forEach((message) => { %>
        <li><a href="messages/<%= message.id %>"><%= message.user %>:</a> <%= message.text %></a></li>
      <% }) %>
    </ul>

    <a href="/new">Post a new message</a>
  </body>
</html>
