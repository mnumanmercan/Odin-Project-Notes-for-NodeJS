generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Kullanıcı modeli
model User {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String   // Hash'lenmiş şifre saklanmalı (bcrypt ile)
  name      String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  // İlişkiler
  files     File[]
  
  @@map("users")
}

// Dosya modeli
model File {
  id           String   @id @default(uuid())
  fileName     String
  originalName String
  mimeType     String
  size         Int      // Byte cinsinden
  path         String   // Dosyanın sunucudaki yolu
  uploadedAt   DateTime @default(now())
  
  // İlişkiler
  userId       String
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  @@map("files")
  @@index([userId])
}