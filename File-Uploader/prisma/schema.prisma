generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

// Kullanıcı modeli
model User {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String   // Hash'lenmiş şifre saklanmalı (bcrypt ile)
  name      String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  // İlişkiler
  files     File[]
  sessions  Session[]
  
  @@map("users")
}

// Session modeli (express-session için)
model Session {
  id        String   @id @default(uuid())
  sid       String   @unique // Session ID
  data      String   // Session verisi (JSON string)
  expiresAt DateTime
  
  // İlişkiler
  userId    String?
  user      User?    @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  @@map("sessions")
  @@index([sid])
  @@index([expiresAt])
}

// Dosya modeli
model File {
  id           String   @id @default(uuid())
  fileName     String
  originalName String
  mimeType     String
  size         Int      // Byte cinsinden
  path         String   // Dosyanın sunucudaki yolu
  uploadedAt   DateTime @default(now())
  
  // İlişkiler
  userId       String
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  @@map("files")
  @@index([userId])
}